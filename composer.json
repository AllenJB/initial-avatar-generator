{
	"name": "lasserafn/php-initial-avatar-generator",
	"description": "A package to generate avatars with initials for PHP",
	"keywords": [
		"initials",
		"image",
		"avatar"
	],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Lasse Rafn",
			"email": "lasserafn@gmail.com"
		}
	],
	"require": {
		"php": "^5.6|^7.0|^7.1",
		"intervention/image": "^2.3",
		"intervention/imagecache": "^2.3",
		"lasserafn/php-initials": "^2.0",
		"lasserafn/php-string-script-language": "^0.1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.7",
		"satooshi/php-coveralls": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"LasseRafn\\InitialAvatarGenerator\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"InitialAvatarGenerator\\Tests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	}
}
